<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.domain.core.emv.profile.basic.BasicEmvProfile"
		entity-name="com.fis.cortex.domain.core.emv.profile.EmvProfile" table="emvprofile"
		dynamic-update="true" optimistic-lock="version">

		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${emvprofile_id.generator.sequence}</param>
			</generator>
		</id>
		
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />

		<property name="shortDescr" column="short_descr" type="string" not-null="true" length="20" />
		<property name="descr" column="descr" type="string" not-null="true" length="128" />
		<property name="scheme" column="scheme" type="short" not-null="true" length="5" />
		<property name="chipref" column="chipref" type="short" not-null="true" length="5" />
		<property name="version" column="version" type="short" not-null="true" length="5" />
		<many-to-one name="emvConfiguration" class="com.fis.cortex.domain.core.emv.conf.EmvConfiguration"
    		column="emvconf_id" access="field" cascade="none" />
		<property name="emvConfXId" column="emvconf_x_id" type="long" length="10" />
		
	</class>

</hibernate-mapping>