<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.model.des.domain.token.basic.BasicTokenProvisioningStatusHistory"
		entity-name="com.fis.cortex.model.des.domain.token.TokenProvisioningStatusHistory" table="TKNPROVSTATUSHIST" >
		<cache usage="read-only" />

		<id name="id" type="long" column="id" />
		<many-to-one name="token" class="com.fis.cortex.model.des.domain.token.Token" cascade="none" access="field" column="token_id" fetch="join"/>
		<many-to-one name="comments" class="com.fis.cortex.model.des.domain.comments.Comments" cascade="none" access="field" column="comments_id" fetch="join"/>

		<property name="whenChanged" column="whendatetime" type="timestamp" not-null="true" />
		<property name="fromStatus" type="string" column="from_status" not-null="true" length="3" />
		<property name="toStatus" type="string" column="to_status" not-null="true" length="3" />
		<property name="byWhomId" column="bywhomid" type="string" not-null="true" length="50" />
		<property name="byWhomName" column="bywhomname" type="string" length="200" />

	</class>

</hibernate-mapping>
