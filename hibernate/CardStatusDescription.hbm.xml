<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">
<hibernate-mapping>
  <class name="com.fis.cortex.crdbase.domain.card.basic.BasicCardStatusDescription"
    entity-name="com.fis.cortex.crdbase.domain.card.CardStatusDescription" table="CRDSTATUSD"  lazy="false" optimistic-lock="version">
	<cache usage="nonstrict-read-write"/>
	
	<composite-id class="com.fis.cortex.crdbase.domain.card.CardStatusDescriptionId" name="cardStatusDescriptionId">
			<key-property name="statCode" access="field" column="Statcode"
				type="string" />
			<key-many-to-one name="localDefinition" column="localedef_id" class="com.fis.cortex.domain.core.localdefinition.LocalDefinition"/>	
	</composite-id>
	
    <version name="versionNumber" column="verno_ctx" generated="always"
			access="field" />
    
    <property name="description" column="Descr" type="string" not-null="true"/>
    
    <property name="shortDescription" column="Short_descr" type="string" not-null="true"  access="field"/>
    	
  </class>
  
  <query name="CardStatusDescription.getCardStatusDescriptionLocalDef">
    <![CDATA[  select crdstus.statusCode, crdstus.description,  cardStatusDescription.shortDescription ,  
               cardStatusDescription.description from CardStatus as crdstus left outer join 
               crdstus.cardStatusDescriptionList as cardStatusDescription inner join 
               cardStatusDescription.cardStatusDescriptionId.localDefinition as localDefinition 
               where localDefinition.ctxLocale = :locale order by crdstus.statusCode  
    ]]>
  </query>
</hibernate-mapping>





