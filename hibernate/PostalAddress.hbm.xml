<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fis.cortex.party.domain.contact.basic.BasicPostalAddress"
		entity-name="com.fis.cortex.party.domain.contact.PostalAddress" table="PRT_CM_P_ADDR">
		<composite-id name="id" class="com.fis.cortex.party.domain.contact.basic.PostalAddressId">
			<key-many-to-one name="contactMechanism" class="com.fis.cortex.party.domain.contactmechanism.ContactMechanism">
			     <column name="PRT_CM_ID" />
			     <column name="PRT_CMT_ID" />
			</key-many-to-one>
		</composite-id>
		<version name="versionNumber" column="VERNO_CTX" access="field" />

		<many-to-one name="country" column="COUNTRY_ISOCODE" class="com.nomadsoft.cortex.domain.country.Country"/>
		<property name="postalCode" type="string" column="POSTAL_CODE" />
		<property name="city" type="string" column="CITY"/>
		<property name="address1" type="string" column="ADDRESS_1" />
		<property name="address2" type="string" column="ADDRESS_2" />
		<property name="address3" type="string" column="ADDRESS_3" />
		<property name="address4" type="string" column="ADDRESS_4" />
		<property name="address5" type="string" column="ADDRESS_5"/>
		<property name="directions" type="string" column="DIRECTIONS"/>
		<property name="province" type="string" column="PROVINCE"/>
		<property name="ctxTerritory" type="string" column="CTXTERRITORY"/>
		<property name="state" type="string" column="CTXSTATE"/>
		<property name="county" type="string" column="COUNTY"/>
		<property name="region" type="string" column="REGION"/>
	</class>
</hibernate-mapping>
