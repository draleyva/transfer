<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="com.metavante.cortex.domain.ccs.paymentplanschedule.basic.BasicPaymentPlanScheduleItem" table="ccspayplan_schedule"
		dynamic-update="true" dynamic-insert="true">
         <id name="id" type="int">
           <column name="id" />
            <generator class="native">
              <param name="sequence_name">${ccspayplan_schedule_id.generator.sequence}</param> 
            </generator>
          </id>
          
		<property name="paymentPlanId" column="ppid" type="long"/>          
		<property name="orderOfInstalment" column="instalment_order"  type="int" />          
        <property name="instalmentAmount" column="amtinslmnt" type="big_decimal" />
        <property name="chargeAmount" column="amtcharge" type="big_decimal" />
        <property name="status" column="status"  type="int" />
        <property name="itemCreateDate" column="item_create_date"  type="date"/>
        <property name="instalmentCreditAccountItemId" column="instalment_item_id" type="long" />
        <property name="chargeCreditAccountItemId" column="charge_item_id" type="long" />
        
        <many-to-one name="instalmentCreditAccountItem" class="com.metavante.cortex.domain.ccs.creditaccountitem.basic.BasicCreditAccountItem"
                    update="false" insert="false" fetch="select" not-found="ignore">
            <column name="instalment_item_id" default="0" />
        </many-to-one>
        
        <many-to-one name="chargeCreditAccountItem" class="com.metavante.cortex.domain.ccs.creditaccountitem.basic.BasicCreditAccountItem"
                    update="false" insert="false" fetch="select" not-found="ignore">
            <column name="charge_item_id" default="0" />
        </many-to-one>                    
	</class>
</hibernate-mapping>          