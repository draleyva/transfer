<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">
<hibernate-mapping>
    <class name="com.metavante.cortex.domain.ccs.creditaccount.basic.BasicCreditAccountCorporateRelation" table="ccscorpaccrel">
        <composite-id>
            <key-property name="parentAccountId" type="long">
                <column name="prntaccid" not-null="true" />                
            </key-property>
            <key-property name="childAccountId" type="long">
                <column name="chldaccid" not-null="true" />                
            </key-property>            
        </composite-id>
        
        <version name="versionNumber" column="verno_ctx" access="field"/>
        
        <property name="flags" type="string">
            <column name="flags" length="8" />
        </property>
    </class>
</hibernate-mapping>