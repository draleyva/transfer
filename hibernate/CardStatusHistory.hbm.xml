<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping default-access="field">
  <class name="com.fis.cortex.crdbase.domain.card.basic.BasicCardStatusHistory" table="CDSTHST" optimistic-lock="version"
  entity-name="com.fis.cortex.crdbase.domain.card.CardStatusHistory">
    <composite-id name="id" class="com.fis.cortex.crdbase.domain.card.CardStatusHistoryId">
      <key-many-to-one name="card" class="com.fis.cortex.crdbase.domain.card.Card" column="crddet_id" access="field" />
      <key-property name="dateSet" column="DATE_SET" />
      <key-property name="timeSet" column="TIME_SET" />
    </composite-id>
    <version name="versionNumber" column="VERNO_CTX" access="field"></version>
    
    <many-to-one name="newCardStatus" column="NEW_STATCODE" class="com.fis.cortex.crdbase.domain.card.CardStatus"
      access="field" not-null="true" lazy="false" />

    <many-to-one name="oldCardStatus" column="OLD_STATCODE" class="com.fis.cortex.crdbase.domain.card.CardStatus"
      access="field" not-null="true" lazy="false" />

    <property name="operator" column="WHO_SET" not-null="true" />

    <property name="reason" column="WHY_SET" not-null="true" />

    <property name="systemDate" column="ctxdate" type="date" not-null="true" />
    
    <property name="expDate" column="expdate" type="date" />
  </class>
</hibernate-mapping>