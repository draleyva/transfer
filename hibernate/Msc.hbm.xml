<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="com.metavante.cortex.domain.msc.basic.BasicMsc" table="msc" dynamic-update="true" dynamic-insert="true">
				
		<cache usage="read-write"/>  
		
		<composite-id name="id"
			class="com.metavante.cortex.identities.MscId">
			<key-property name="index" type="short">
				<column name="idx" />
			</key-property>
			<key-property name="tag" type="string">
				<column name="tag" />
			</key-property>
		</composite-id>
		<property name="dateValue" column="date_t" type="date"
			length="4" access="field" />
		<property name="doubleValue" type="double" column="double_t" />
		<property name="module" type="char" column="mscmodule" />
		<property name="descriptionNumber" type="int" column="descr" />
		<property name="mask" type="short" column="mask" />
		<property name="stringValue" type="string" column="string_t" />
		<property name="longValue" type="long" column="long_t" />
		<property name="shortValue" type="short" column="short_t" />
	</class>
</hibernate-mapping>