<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="com.metavante.cortex.domain.ccs.paymentplan.basic.BasicPaymentPlanSetAmount" table="ccsppsetamt" optimistic-lock="version"
		entity-name="com.metavante.cortex.domain.ccs.paymentplan.PaymentPlanSetAmount" dynamic-update="true" dynamic-insert="true">
		
         <id name="id" type="long">
           <column name="id" />
            <generator class="native">
              <param name="sequence_name">${ccsppsetamt_id.generator.sequence}</param>
            </generator>
          </id>    

 		<version name="versionNumber" column="verno_ctx" generated="always" access="field" type="long" unsaved-value="undefined" /> 
        <property name="paymentPlanSetId" type="long" column="ppsetid" />
        <property name="amountId" type="int" column="amtid"/>
		<property name="lowestTransactionAmount" column="thresamt" type="big_decimal"/>

	</class>
</hibernate-mapping>