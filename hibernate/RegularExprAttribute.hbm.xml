<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.domain.core.regularexpression.basic.BasicRegularExprAttribute"
		entity-name="com.fis.cortex.domain.core.regularexpression.RegularExprAttribute" table="re_attr"
		dynamic-update="true" optimistic-lock="version">

		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${re_attr_id.generator.sequence}</param>
			</generator>
		</id>
		
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />

		<property name="reContextId" column="re_context_id" type="long" not-null="true" />
		<property name="referenceId" column="reference_id" type="long" not-null="true" />
    	<property name="idx" column="idx" type="short" not-null="true" />
		<property name="posFrom" column="pos_from" type="short" not-null="true" />
		<property name="posTo" column="pos_to" type="short" not-null="true" />

	</class>

</hibernate-mapping>
