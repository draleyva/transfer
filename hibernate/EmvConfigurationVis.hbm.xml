<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.domain.core.emv.conf.basic.BasicEmvConfigurationVis"
		entity-name="com.fis.cortex.domain.core.emv.conf.EmvConfigurationVis" table="emvconf_vis"
		dynamic-update="true" optimistic-lock="version">

		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${emvconf_vis_id.generator.sequence}</param>
			</generator>
		</id>
		
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />

		<property name="shortDescr" column="short_descr" type="string" not-null="true" length="20" />
		<property name="descr" column="descr" type="string" not-null="false" length="128" />
		<property name="emviddschconf" column="emviddschconf" type="short" not-null="false" length="5" />
		<property name="emviddoptconf" column="emviddoptconf" type="short" not-null="false" length="5" />
		
	</class>

</hibernate-mapping>