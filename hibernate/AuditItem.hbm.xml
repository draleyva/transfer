<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.domain.core.audit.basic.BasicAuditItem"
		entity-name="com.fis.cortex.domain.core.audit.AuditItem"
		table="audit_item" dynamic-update="true" optimistic-lock="version">

        <id name="id" type="long" access="field">
            <column name="id" />
            <generator class="native">
                <param name="sequence_name">${audit_item_id.generator.sequence}</param>
            </generator>
        </id>
        
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />
		            
		<property name="objectId" column="object_id" type="long" not-null="true" access="field" />
        <property name="activityId" column="activity_id" type="long" not-null="true" access="field" />
        <property name="date" column="auditdatetime" type="timestamp" not-null="true" access="field" />
        <property name="preActionData" column="preactiondata" type="clob" not-null="true" access="field" />
        <property name="postActionData" column="postactiondata" type="clob" not-null="true" access="field" />        
        <property name="objectType" column="objecttype" type="com.fis.cortex.infrastructure.core.hibernate.types.ObjectTypeUserEnumType" not-null="true"
            access="field" />
        
        <many-to-one name="typeDefinition"
            class="com.fis.cortex.domain.core.audit.AuditItemTypeDefinition" insert="false" update="false"
            column="objecttype" foreign-key="objecttype_id" access="field" cascade="none" />
               
        <property name="identifier1" column="identifier1" type="long" not-null="true" access="field" />
        <property name="identifier2" column="identifier2" type="long" not-null="true" access="field" />
        <property name="identifier3" column="identifier3" type="long" not-null="true" access="field" />
        <property name="identifier4" column="identifier4" type="long" not-null="true" access="field" />
	</class>

</hibernate-mapping>
