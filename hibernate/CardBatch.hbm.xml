<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">
<hibernate-mapping>
	<class name="com.fis.cortex.crdbase.domain.cardbatch.basic.BasicCardBatch"
		entity-name="com.fis.cortex.crdbase.domain.cardbatch.CardBatch" table="CRDBTCH"
		optimistic-lock="version">
		<id name="id">
			<column name="BATCH" length="4" />
		</id>
		<version name="versionNumber" column="VERNO_CTX" access="field"></version>

		<many-to-one name="institution"
			class="com.fis.cortex.domain.core.institution.Institution" column="inst_id"
			access="field" cascade="none" />

		<many-to-one name="cardProduct" column="crdproduct_id"
			class="com.fis.cortex.crdbase.domain.card.CardProduct" not-null="true" />

		<property name="batchStatus"
			type="com.fis.cortex.crdbase.infrastructure.hibernate.CardBatchStatusUserType"
			lazy="false">
			<column name="STATUS" length="2" not-null="true" />
		</property>
		<property name="createDate" type="date">
			<column name="CREATEDATE" not-null="true" />
		</property>
		<property name="user" type="string">
			<column name="usr" length="32" not-null="true" />
		</property>
		<property name="cardCount" type="int">
			<column name="CARDCOUNT" length="15" not-null="true" />
		</property>
		<property name="cardsProducedOn" type="date">
			<column name="DATE_CARDPRO" not-null="true" />
		</property>
		<property name="pinsProducedOn" type="date">
			<column name="DATE_PINPRO" not-null="true" />
		</property>
		<property name="priority"
			type="com.fis.cortex.crdbase.infrastructure.hibernate.CardBatchPriorityUserType"
			lazy="false">
			<column name="PRIORITY" length="1" not-null="true" />
		</property>
		<property name="batchType" type="int">
			<column name="BTCHTYP" length="5" not-null="true" />
		</property>
		<property name="deliveryAddress" type="char">
			<column name="DELVADDR" length="1" not-null="true" />
		</property>
		<property name="options" type="string">
			<column name="options" not-null="true" />
		</property>
		<property name="batchCategory" type="string">
			<column name="batch_cat" not-null="true" />
		</property>
	</class>
</hibernate-mapping>

