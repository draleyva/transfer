<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.domain.core.barcode.basic.BasicBarcode"
		entity-name="com.fis.cortex.domain.core.barcode.Barcode" table="barcode"
		dynamic-update="true" optimistic-lock="version">

		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${barcode_id.generator.sequence}</param>
			</generator>
		</id>
		
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />
		<!-- instId is used instead of Institution object because of the conflicting packages for Institution -->
		<property name="instId" column="inst_id" type="long" not-null="true" />	
    	<property name="idx" column="idx" type="short" not-null="true" />
		<property name="companyname" column="company_name" not-null="true"	type="string" length="40" />
		<property name="companycode" type="string" column="company_code" length="20" />
		<property name="accno" type="string" column="accno" length="28" />
		<property name="currcode" column="currcode" not-null="true" />
		<property name="options" type="string" column="options" length="32" />
    	<many-to-one name="barcodeContext" class="com.fis.cortex.domain.core.barcode.BarcodeContext"
    		column="barcode_context_id" access="field" cascade="none" />
		<property name="amtPosFrom" column="amt_pos_from" type="short" not-null="true" />
		<property name="amtPosTo" column="amt_pos_to" type="short" not-null="true" />
		<property name="amtDp" column="amt_dp" type="short" not-null="true" />

	</class>

</hibernate-mapping>
