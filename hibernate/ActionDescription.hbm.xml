<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fis.mkc.domain.model.basic.BasicActionDescription"
		entity-name="com.fis.mkc.domain.model.ActionDescription" table="MKC_ACTION_DESCR"
		mutable="false">

		<composite-id name="id" class="com.fis.mkc.domain.identity.ActionDescriptionId">
			<key-property name="actionId">
				<column name="ACTION_ID" />
			</key-property>
			<key-property name="sourceId">
				<column name="SOURCE_ID" />
			</key-property>
			<key-property name="language">
				<column name="LANGUAGE" />
			</key-property>
		</composite-id>

		<many-to-one name="action"
			entity-name="com.fis.mkc.domain.model.Action"
			insert="false" update="false">
			<column name="ACTION_ID" />
			<formula>SOURCE_ID</formula>
		</many-to-one>

		<many-to-one name="source"
			entity-name="com.fis.mkc.domain.model.Source"
			insert="false" update="false">
			<column name="SOURCE_ID" />
		</many-to-one>

		<property name="language" type="java.lang.String" insert="false" update="false">
			<column name="LANGUAGE" length="4" />
		</property>

		<property name="description" type="java.lang.String">
			<column name="DESCRIPTION" length="64" />
		</property>

	</class>
</hibernate-mapping>