<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fis.mkc.domain.model.basic.BasicAction"
		entity-name="com.fis.mkc.domain.model.Action" table="MKC_ACTION"
		mutable="false">

		<composite-id name="id" class="com.fis.mkc.domain.identity.ActionId">
			<key-property name="actionId">
				<column name="ID" />
			</key-property>
			<key-property name="sourceId">
				<column name="SOURCE_ID" />
			</key-property>
		</composite-id>

		<property name="code" type="java.lang.String">
			<column name="CODE" length="15" />
		</property>

		<property name="restrictionType" type="RestrictionType">
			<column name="TYPE_ID" />
		</property>

		<set name="localisedDescriptions" inverse="true" cascade="all">
			<key>
				<column name="ACTION_ID" />
				<column name="SOURCE_ID" />
			</key>
            <one-to-many
                entity-name="com.fis.mkc.domain.model.ActionDescription" />
		</set>

		<many-to-one name="source"
			entity-name="com.fis.mkc.domain.model.Source"
			insert="false" update="false">
			<column name="SOURCE_ID" />
		</many-to-one>

		<property name="applicableToInstitution" type="java.lang.Boolean">
			<column name="INST_APPL" length="1" />
		</property>

	</class>
</hibernate-mapping>