<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
    <class name="com.metavante.cortex.domain.money.basic.BasicCurrency" table="currency"
      entity-name="com.metavante.cortex.domain.money.Currency">
	   	
	   	<cache usage="read-only"/>  
	    
	    <id name="id" column="currcode" access="field"/>
	  
	    <property name="alphaCode" column="alphacode" type ="string" not-null="true"
	    	access="field"/>
	    
	    <property name="decimalPlaces" column="dec_places" type ="short" not-null="true"
	    	access="field"/>
	    
	    <property name="descriptionTag" column="descrtag" type="int" not-null="true"
	    	access="field"/>

  <!--query name="Currency.findAll">
  	<![CDATA[from Currency c order by c.alphaCode]]>
  </query-->
    </class>

</hibernate-mapping>
