<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.cardeventextauth.basic.BasicCardEventExtAuth"
		entity-name="com.fis.cortex.crdbase.domain.cardeventextauth.CardEventExtAuth" table="crdevent_extauth"
		dynamic-update="true" optimistic-lock="version">
		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${crdevent_extauth_id.generator.sequence}</param>
			</generator>
		</id>
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />

		<property name="cardEventId" column="crdevent_id" type="long" not-null="true" access="field" />
		
		
		<property name="makerId" column="makerid" type="string" length="16" not-null="true" access="field" />
		<property name="checkerId" column="checkerid" type="string" length="16" not-null="true" access="field" />
		<property name="departmentId" column="deptid" type="string" length="16" not-null="true" access="field" />
		<property name="externalReference" column="extref" type="string" length="16" not-null="true" access="field" />
		<property name="channel" column="channel" type="string" length="16" not-null="true" access="field" />
		<property name="serviceName" column="svcname" type="string" length="32" not-null="true" access="field" />
		<property name="creationDate"	column="datecreation" type="date" not-null="true" access="field" />
		<property name="creationTime" column="timecreation" type="long" not-null="true" access="field" />

	</class>

</hibernate-mapping>
