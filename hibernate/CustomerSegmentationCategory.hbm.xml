<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.nomadsoft.cortex.domain.accountholder.basic.BasicCustomerSegmentationCategory" 
    entity-name="com.nomadsoft.cortex.domain.accountholder.CustomerSegmentationCategory" table="CAT_CUSTSEG" dynamic-update="true" optimistic-lock="version">
	
		<id name="id" type="long">
	           <column name="id" />
	            <generator class="${id.generator.class}">
	              <param name="sequence">${cat_custseg_id.generator.sequence}</param>
	            </generator>
	    </id>
	    
	    <version name="versionNumber" column="verno_ctx" generated="always" access="field"/>
		
		<property name="category" column="catvalue" not-null="true" type="string" length="12" access="field"/>	
	   	<property name="description" column="descr" not-null="true" type="string" length="48" access="field"/>
	   	<property name="instId" column="inst_id" not-null="true" type="long" access="field"/>	
	   	<property name="catlevel" column="catlevel" not-null="true" type="int" access="field"/>

    </class>
</hibernate-mapping>