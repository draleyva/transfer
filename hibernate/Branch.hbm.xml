<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
  <class name="com.metavante.cortex.domain.core.branch.basic.BasicBranch"
    entity-name="com.metavante.cortex.domain.core.branch.Branch" table="BRANCH" mutable="false"
    optimistic-lock="version">

    <composite-id name="id" class="com.metavante.cortex.identities.BranchId">
	  <key-many-to-one name="institution" class="com.fis.cortex.domain.core.institution.Institution" column="inst_id" access="field"/>      
      <key-property name="branchCode" column="BRNCODE" access="field" />
    </composite-id>
 
    <version name="versionNumber" column="VERNO_CTX" access="field"></version>

    <property name="feCode" column="FECODE" not-null="true" />

    <property name="description" column="DESCR" not-null="true" />

    <property name="addrLine1" column="ADDRL1" not-null="true" />

    <property name="addrLine2" column="ADDRL2" not-null="true" />

    <property name="city" column="CITY" not-null="true" />

    <property name="contactName" column="CONTACTNAME" not-null="true" />

    <property name="contactNo" column="CONTACTNO" not-null="true" />

    <property name="region" column="REGION" not-null="true" />

    <property name="postCode" column="POSTCODE" not-null="true" />

    <property name="countryCode" column="COUNTRYCODE" not-null="true" />

    <property name="sortCode" column="SORTCODE" not-null="true" />

  </class>

</hibernate-mapping>
