<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="com.fis.cortex.crdbase.domain.card.basic.BasicInstitutionSecurityCheck"
		entity-name="com.fis.cortex.crdbase.domain.card.InstitutionSecurityCheck" table="instsecchk"
		optimistic-lock="version">
		
		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${instsecchk_id.generator.sequence}</param>
			</generator>
		</id>
		<version name="versionNumber" column="VERNO_CTX" access="field"></version>
		
		<many-to-one name="institution"
			class="com.fis.cortex.domain.core.institution.Institution" column="inst_id"
			access="field" cascade="delete" lazy="false" />
		
		<property name="checkDescription" column="chk_description"
			type="string" access="field" length="64" />

		<property name="checkName" column="chk_name" type="string"
			access="field" length="64" />
	
		<property name="caseSensitive" column="case_sensitive" type="string"
			access="field" length="1" />
			
		<property name="guiUpdatable" column="gui_updatable" type="string"
			access="field" length="1" />

		<property name="secType" column="sec_type" type="int" access="field"
			length="5" />
		
		<property name="numChars" column="num_chars" type="int"
			access="field" length="5" />
			
		<property name="chkType" column="chk_type" type="int" access="field"
			length="5" />
		
	</class>
	
	</hibernate-mapping>
	
	
		

		

		
		
