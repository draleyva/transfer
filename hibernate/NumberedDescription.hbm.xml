<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="com.fis.cortex.domain.core.msc.basic.BasicNumberedDescription" 
    entity-name="com.fis.cortex.domain.core.msc.NumberedDescription" table="numdescr" lazy="true" dynamic-update="true" optimistic-lock="version">
    
    <composite-id name="id" class="com.fis.cortex.identities.core.NumberedDescriptionId">
      <key-property name="language" column="lang" type="string" length="2" access="field" />
      <key-property name="descriptionType" column="descrtype" type="string" length="6" access="field" />
      <key-property name="id" column="id" type="int" access="field" />
    </composite-id>
    
    <version name="versionNumber" column="verno_ctx" access="field"/>   
    <property name="description" column="descr" not-null="true" type="string" length="160" access="field"/>
    </class>

</hibernate-mapping>
