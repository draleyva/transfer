<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fis.cortex.domain.custid.basic.BasicChargeData"
		entity-name="com.fis.cortex.domain.custid.ChargeData" table="CHARGEDATA"
		dynamic-update="true" optimistic-lock="version">

		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence">chargedata_sequence</param>
			</generator>
		</id>

		<version name="versionNumber" column="verno_ctx" generated="always"
			access="field" />

		<property name="transactionDate" type="date">
			<column name="CTXDATE"/>
		</property>	
		
		<many-to-one name="card"
			class="com.nomadsoft.cortex.domain.card.basic.BasicCard" entity-name="com.nomadsoft.cortex.domain.card.Card"
			insert="true" update="true">
			<column name="CRDDET_ID" not-null="true" />            
		</many-to-one>
		<property name="chargeType" type="long">
			<column name="CHARGETYPE" length="5" not-null="true"/>
		</property>
		<property name="chargeData" type="string">
			<column name="CHARGEDATA" length="80" not-null="true"/>
		</property>
		<property name="chargeCurrency" type="string">
			<column name="CHARGECUR" length="3" not-null="true"/>
		</property>		
		<property name="customerType" type="long">
			<column name="CUSTTYPE" length="5" not-null="true"/>
		</property>
		<property name="Opdata" type="string">
			<column name="OPDATA" length="128" />
		</property>
		<property name="processed" type="string">
			<column name="PROCESSED" length="1" />
		</property>
       
	</class>
</hibernate-mapping>