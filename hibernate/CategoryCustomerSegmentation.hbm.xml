<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.categorycustomersegmentation.basic.BasicCategoryCustomerSegmentation"
		entity-name="com.fis.cortex.crdbase.domain.categorycustomersegmentation.CategoryCustomerSegmentation" table="cat_custseg"
		dynamic-update="true" optimistic-lock="version">
		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${cat_custseg_id.generator.sequence}</param>
			</generator>
		</id>
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />
		
		<!-- NOTE: this table servers institution by default as 0 -->
		<!-- either customer will modify entries of that table to server proper ID or institution will be unusable -->
		<many-to-one name="institution" class="com.fis.cortex.domain.core.institution.Institution" 
			cascade="none" column="inst_id" access="field" lazy="proxy" />
		
		<property name="categoryLevel" column="catlevel" type="long" not-null="true" access="field" />
        <property name="categoryValue" column="catvalue" type="string" length="12" not-null="true" access="field" />
        <property name="description" column="descr" type="string" not-null="true" access="field" length="48"/>
	</class>
</hibernate-mapping>
