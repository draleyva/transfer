<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.cardsupportingdocument.basic.BasicCardSupportingDocument"
		entity-name="com.fis.cortex.crdbase.domain.cardsupportingdocument.CardSupportingDocument" table="CRDSUPDOC" optimistic-lock="version">
		
		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${crdsupdoc_id.generator.sequence}</param>
			</generator>
		</id>		
		<version name="versionNumber" column="VERNO_CTX" access="field" />

		<many-to-one name="card" class="com.fis.cortex.crdbase.domain.card.Card"
		 column="CRDDET_ID" access="field" />
		 
		 
		 <property name="supportingDocumentType" column="supdoctype" type="short" access="field"/>
		 <property name="documentReferenceOne" column="docRef1"		 type="string" length="32" access="field"/>
		 <property name="documentReferenceTwo" column="docRef2"		 type="string" length="32" access="field"/>
		 <property name="cardEffectiveDate" column="CrdEffDate" 	 type="date"  />
		 <property name="cardExpiryDate" column="CrdExpDate"		 type="date"  />
		 <property name="documentEffectiveDate" column="DocEffDate"	 type="date"  />
		 <property name="documentExpiryDate" column="DocExpDate"	 type="date"  />

		<property name="userDataOne" column="USRDATA1" type="string" length="32" access="field"/>
		<property name="userDataTwo" column="USRDATA2" type="string" length="32" access="field"/>		
	</class>
</hibernate-mapping>

