<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">
<hibernate-mapping>
    <class name="com.metavante.cortex.domain.ccs.creditcycle.basic.BasicCreditCycle" table="ccscycle" 
            proxy="com.metavante.cortex.domain.ccs.creditcycle.basic.BasicCreditCycle" 
            dynamic-update="true" dynamic-insert="true">

	    <cache usage="read-write"/>
        <composite-id name="id" class="com.metavante.cortex.identities.CreditCycleId">
            <key-property name="cycleCode" type="string">
                <column name="cyclecode" length="10" />
            </key-property>
			<key-many-to-one name="institution" class="com.fis.cortex.domain.core.institution.Institution" column="inst_id" lazy="false" access="field"/>      
        </composite-id>
        
        <property name="description" type="string">
            <column name="descr" length="50" not-null="true" />
        </property>
        <property name="cyclesPerMonth" type="short">
            <column name="cycles_per_month" not-null="true" />
        </property>
        <property name="cycleDay" type="short">
            <column name="cycle_day" not-null="true" />
        </property>
        <property name="persistentDateCycleStart" type="date">
            <column name="date_cycle_start" length="4" not-null="true" />
        </property>
        <property name="persistentDateCycleEnd" type="date">
            <column name="date_cycle_end" length="4" not-null="true" />
        </property>
        <property name="statmntDayOffset" type="short">
            <column name="statmnt_day_offset" not-null="true" />
        </property>
        <property name="payByDateOffset" type="short">
            <column name="pay_by_date_offset" not-null="true" />
        </property>
        <property name="payByDateCollectionOffset" type="short">
 			<column name="pbdcolloffset" length="4" not-null="true" />
 		</property>
        
        <property name="graceDaysOffset" type="short">
            <column name="grace_days_offset" not-null="true" />
        </property>
        <property name="persistentCycleCount" type="int">
            <column name="cycle_count" not-null="true" />
        </property>
        <property name="originalStartDate" type="date">
            <column name="date_org_start" length="4" not-null="true" />
        </property>
        <property name="payByDateCalendar" type="string">
            <column name="calid" length="4" not-null="true" />
        </property>
        <property name="persistentPayByDate" type="date">
            <column name="date_pay" length="4" not-null="true" />
        </property>
		<property name="directDebitOffSet" type="short">
		    <column name="ddoffset" not-null="true" />
		</property>
		<property name="payByDayOfMonth" type="short">
		    <column name="pbddayofmonth" not-null="true" />
		</property>
		<property name="payByDayMethod" type="short">
		    <column name="pbdmthd" not-null="true" />
		</property>
		<property name="fromCycleCode" type="string">
            <column name="from_cyclecode" length="10" not-null="true" />
        </property>
        <property name="toCycleCode" type="string">
            <column name="to_cyclecode" length="10" not-null="true" />
        </property>
        <property name="paymentRequestDateCalculationMethod" type="short">
            <column name="dddatecalctype" not-null="true" length="2"/>
        </property>
    </class>
</hibernate-mapping>
