<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.domain.core.emv.conf.basic.BasicEmvConfigurationMc"
		entity-name="com.fis.cortex.domain.core.emv.conf.EmvConfigurationMc" table="emvconf_mc"
		dynamic-update="true" optimistic-lock="version">

		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${emvconf_mc_id.generator.sequence}</param>
			</generator>
		</id>
		
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />

		<property name="shortDescr" column="short_descr" type="string" not-null="true" length="20" />
		<property name="descr" column="descr" type="string" not-null="false" length="128" />
		<property name="applnCtl" column="appln_ctl" type="string" not-null="false" length="12" />
		<property name="applnCtlCl" column="appln_ctl_cl" type="string" not-null="false" length="12" />
		<property name="accum1Ctl" column="accum1_ctl" type="string" not-null="false" length="2"/>
		<property name="accum1CtlCl" column="accum1_ctl_cl" type="string" not-null="false" length="2"/>
		<property name="accum2Ctl" column="accum2_ctl" type="string" not-null="false" length="2"/>
		<property name="accum2CtlCl" column="accum2_ctl_cl" type="string" not-null="false" length="2"/>
		<property name="cntr1Ctl" column="cntr1_ctl" type="string" not-null="false" length="2"/>
		<property name="cntr1CtlCl" column="cntr1_ctl_cl" type="string" not-null="false" length="2"/>
		<property name="cntr2Ctl" column="cntr2_ctl" type="string" not-null="false" length="2"/>
		<property name="cntr2CtlCl" column="cntr2_ctl_cl" type="string" not-null="false" length="2"/>
	</class>

</hibernate-mapping>