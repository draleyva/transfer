<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">
<hibernate-mapping>
  <class name="com.fis.cortex.crdbase.domain.account.basic.BasicAccountStatusDescription"
    entity-name="com.fis.cortex.crdbase.domain.account.AccountStatusDescription" table="ACCSTATUSD"  lazy="false" optimistic-lock="version">
	<cache usage="nonstrict-read-write"/>
	
	<composite-id class="com.fis.cortex.crdbase.domain.account.AccountStatusDescriptionId" name="accountStatusDescriptionId">
			<key-property name="statCode" access="field" column="Statcode"
				type="string" />
			<key-many-to-one name="localDefinition" column="localedef_id" class="com.fis.cortex.domain.core.localdefinition.LocalDefinition"/>	
	</composite-id>
	
    <version name="versionNumber" column="verno_ctx" generated="always"
			access="field" />
    
    <property name="description" column="Descr" type="string" not-null="true"/>
    
    <property name="shortDescription" column="Short_descr" type="string" not-null="true"  access="field"/>
    	
  </class>
  
  <query name="AccountStatusDescription.getAccountStatusDescriptionLocalDef">
    <![CDATA[  select accstus.statusCode, accstus.description,  accountStatusDescription.shortDescription ,  
               accountStatusDescription.description from AccountStatus as accstus left outer join 
	           accstus.accountStatusDescriptionList as accountStatusDescription	inner join 
	           accountStatusDescription.accountStatusDescriptionId.localDefinition as localDefinition 
               where localDefinition.ctxLocale = :locale order by accstus.statusCode  
    ]]>
  </query>
</hibernate-mapping>





