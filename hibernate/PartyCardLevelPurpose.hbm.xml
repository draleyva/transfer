<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class
		name="com.fis.cortex.crdbase.domain.contactmechanism.basic.BasicPartyCardLevelPurpose"
		entity-name="com.fis.cortex.crdbase.domain.contactmechanism.PartyCardLevelPurpose"
		table="prt_pcmp_media " optimistic-lock="version">

		<composite-id name="id">
			<key-property name="mediaTypeId" access="field"
				column="mediatype_id" type="int" />
			<key-property name="mediaId" access="field" column="media_id"
				type="long" />
			<key-property name="contactMechanismPurposeType" access="field" column="prt_cmpt_id"
				type="int" />
			<key-property name="partyContactMechanismId" access="field"
				column="prt_cm_id" type="long" />
			<key-property name="partyContactMechanismTypeId" access="field"
				type="int" column="prt_cmt_id" />
			<key-property name="partyId"
				access="field" column="prt_party_id" type="long"  />
			<key-property name="partyPrtId" access="field" column="prt_prt_id"
				type="int" />
			<key-property name="addressLinkFromDate" access="field" column="prt_pcm_from_date"
				type="date" />
			<key-property name="customerLevelPurposeFromDate" access="field" column="prt_pcmp_from_date"
				type="date" />			
		</composite-id>
		
		<version name="versionNumber" column="VERNO_CTX" access="field" />

	</class>

</hibernate-mapping>

