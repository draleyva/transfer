<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.card.basic.BasicCardReplace"
		entity-name="com.fis.cortex.crdbase.domain.card.CardReplace" table="CRDRPLACE"
		optimistic-lock="version">
		<id name="id" type="long" column="OLD_CRDDET_ID" length="10" access="field">
			<generator class="assigned" />
		</id>
		<version name="versionNumber" column="VERNO_CTX" access="field"></version>
		<property name="replacementDate" type="date">
			<column name="DATERPLC" not-null="true" />
		</property>
		<property name="user" type="string">
			<column name="usr" length="32" not-null="true" />
		</property>
		<property name="reason" type="string">
			<column name="REASON" length="30" not-null="true" />
		</property>
		<many-to-one name="card" class="com.fis.cortex.crdbase.domain.card.Card" column="new_crddet_id" access="field"/>
		
	</class>
</hibernate-mapping>

