<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fis.mkc.domain.model.basic.BasicMkcRestriction"
		entity-name="com.fis.mkc.domain.model.MkcRestriction" dynamic-update="true"
		optimistic-lock="version" table="MKC_ENBL_RSTR">

		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="native">
				<param name="sequence_name">MKC_ENBL_RSTR_SEQUENCE</param>
			</generator>
		</id>

		<version name="versionNumber" column="VERNO_CTX" access="field" generated="always" />

        <property name="active" type="java.lang.Boolean" column="active" />

		<many-to-one name="source"
			entity-name="com.fis.mkc.domain.model.Source">
			<column name="SOURCE_ID" />
		</many-to-one>

		<many-to-one name="action"
			entity-name="com.fis.mkc.domain.model.Action">
			<column name="ACTION_ID" />
			<formula>SOURCE_ID</formula>
		</many-to-one>
		
		<property name="restrictionType" type="RestrictionType">
			<column name="RSTR_TYPE_ID" />
		</property>
		
		<property name="enablementPriority" type="java.lang.Integer" formula="CASE RSTR_TYPE_ID when  1 then 3 when 3 then 4 when 4 then 2 when 5 then  1 else 99 END" />
		
		<many-to-one name="userGroup" not-found="ignore"
			entity-name="com.fis.mkc.domain.model.UserGroup">
			<column name="USRGRP_ID" />
			<formula>SOURCE_ID</formula>
		</many-to-one>
		
		<many-to-one name="institution" not-found="ignore"
			entity-name="com.fis.mkc.domain.model.Institution">
			<column name="INST_ID" />
			<formula>SOURCE_ID</formula>
		</many-to-one>

	</class>
</hibernate-mapping>