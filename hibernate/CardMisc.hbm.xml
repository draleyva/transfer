<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.card.basic.BasicCardMisc"
		entity-name="com.fis.cortex.crdbase.domain.card.CardMisc" table="crddetmisc"
		dynamic-update="true" optimistic-lock="version">

		<id name="crddet_id" column="crddet_id" type="long" length="10" access="field" />
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />
		<property name="export" column="export" type="short" access="field" />
		<property name="cvv2CheckDate" column="CVV2CHK_DATE" type="date" access="field" />
		<property name="cvv2Tries" column="CVV2TRIES" type="short" access="field" />
		<property name="pvvold" column="pvvold" type="string" length="4" not-null="false" access="field" />
		<property name="pvkiold" column="pvkiold" type="string"	length="1" not-null="true" access="field" />


	</class>


</hibernate-mapping>
