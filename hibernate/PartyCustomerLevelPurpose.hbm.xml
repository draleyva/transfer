<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class
		name="com.fis.cortex.crdbase.domain.contactmechanism.basic.BasicPartyCustomerLevelPurpose"
		entity-name="com.fis.cortex.crdbase.domain.contactmechanism.PartyCustomerLevelPurpose"
		table="prt_pcmp" optimistic-lock="version">

		<composite-id name="id">
			<key-property name="contactMechanismPurposeType" access="field"
				column="prt_cmpt_id" type="int" />
			<key-property name="fromDate" column="from_date" type="date" />
			<key-property name="usageTypeId" column="usage_type_id" />
			<key-property name="partyId" access="field" column="prt_party_id"
				type="long" />
			<key-property name="contactMechanismPurposeFromDate"
				access="field" column="prt_pcm_from_date" type="date" />
			<key-property name="partyPrtId" access="field" column="prt_prt_id"
				type="int" />
			<key-property name="partyContactMechanismId" access="field"
				column="PRT_CM_ID" type="long" />
			<key-property name="partyContactMechanismTypeId" access="field"
				type="int" column="PRT_CMT_ID" />
		</composite-id>
		<version name="versionNumber" column="VERNO_CTX" access="field" />
		<property name="untilDate" access="field" column="until_date"
			type="date" not-null="true" />

	</class>
</hibernate-mapping>

