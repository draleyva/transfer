<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.fis.cortex.domain.core.audit.basic.BasicActivity"
        entity-name="com.fis.cortex.domain.core.audit.Activity"
        table="activity" dynamic-update="true">
        
        <id name="id" column="id" type="long" access="field" />

		<property name="userName" column="user_name" type="string" length="255" not-null="true" access="field" />
        <property name="activityDateTime" column="activitydatetime" type="timestamp" not-null="true" access="field" />
        <property name="activityCode" column="activity_code" type="string" length="16" not-null="true" access="field" />
        
        <bag name="auditItems" inverse="true" cascade="none"
            lazy="true" fetch="select" access="field">
            <key column="activity_id" />
            <one-to-many
                class="com.fis.cortex.domain.core.audit.AuditItem" />
        </bag>
	</class>

</hibernate-mapping>
