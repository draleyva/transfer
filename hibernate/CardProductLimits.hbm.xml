<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="com.metavante.cortex.domain.crdbase.card.basic.BasicCardProductLimits"
		entity-name="com.metavante.cortex.domain.crdbase.card.CardProductLimits" table="CRDPRODLIM" mutable="false"
		optimistic-lock="version">

		<id name="id" type="long">
			<column name="crdproduct_id" />
			<generator class="native">
				<param name="sequence_name">${crdprodlim_id.generator.sequence}</param>
			</generator>
		</id>

		<property name="cycleLength" type="short" column="cycle_len" not-null="true" />
		<property name="cashLimitAmount" type="double" column="cashlim_amt" precision="8" scale="15" not-null="true" />
		<property name="cashLimitNumber" type="short" column="cashlim_num" not-null="true" />
		<property name="purchaseLimitAmount" type="double" column="purchlim_amt" precision="8" scale="15" not-null="true" />
		<property name="purchaseLimitNumber" type="short" column="purchlim_num" not-null="true" />
		<property name="totalLimitAmount" type="double" column="totlim_amt" precision="8" scale="15" not-null="true" />
		<property name="totalLimitNumber" type="short" column="totlim_num" not-null="true" />

	</class>
</hibernate-mapping>
