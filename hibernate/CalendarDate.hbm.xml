<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">
<hibernate-mapping>
    <class name="com.metavante.cortex.domain.ccs.creditcycle.basic.BasicCalendarDate" table="clndrdate">
   	
   	<cache usage="nonstrict-read-write"/>
   	
	    <composite-id name="calendarDateId" class="com.metavante.cortex.identities.CalendarDateId">
	        <key-property name="calId" type="string">
	            <column name="calid" length="4" />
	        </key-property>
	        <key-property name="calDate" type="date">
	            <column name="caldate" length="4" />
	        </key-property>
	        <key-property name="calTime" type="int">
	            <column name="caltime" />
	        </key-property>
	    </composite-id>
	    <property name="description" type="string">
	        <column name="descr" length="64" not-null="true" />
	    </property>
        <property name="dateClass" type="short">
	        <column name="dateclass" not-null="true" />
	    </property>
	    <property name="dateAction" type="string">
	        <column name="dateaction" length="128" not-null="true" />
	    </property>
	    <property name="repeat" type="int">
	        <column name="repeat" not-null="true" />
	    </property>
	    <property name="dateFlags" type="string">
	        <column name="dateflags" length="8" not-null="true" />
	    </property>
    </class>
</hibernate-mapping>
