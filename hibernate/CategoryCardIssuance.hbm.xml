<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.categorycardissuance.basic.BasicCategoryCardIssuance"
		entity-name="com.fis.cortex.crdbase.domain.categorycardissuance.CategoryCardIssuance" table="cat_crdiss" optimistic-lock="version">


		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${cat_crdiss_id.generator.sequence}</param>
			</generator>
		</id>		
		<version name="versionNumber" column="VERNO_CTX" access="field" />
		
		
		<property name="institutionId" column="INST_ID" type="long" length="10" />
		<property name="categoryValue" column="CATVALUE" type="string" length="12" />
		<property name="description" column="DESCR" type="string"  length="48"/>

	</class>
</hibernate-mapping>

