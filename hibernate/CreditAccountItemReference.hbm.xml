<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
    <class name="com.metavante.cortex.domain.ccs.creditaccountitemreference.basic.BasicCreditAccountItemReference" table="ccsitemref" 
    dynamic-update="true" dynamic-insert="true">

         <id name="itemReferenceId" type="long">
           <column name="id" />
            <generator class="native">
              <param name="sequence_name">${ccsitemref_id.generator.sequence}</param>
            </generator>
          </id>
          
        <version name="versionNumber" column="verno_ctx" access="field"/>
        
        <property name="cortexDate" type="date" column="ccsdate" length="4" not-null="true" />
        
        <many-to-one name="myItem" class="com.metavante.cortex.domain.ccs.creditaccountitem.basic.BasicCreditAccountItem"
            column="item_id" access="field" insert="true" update="true" cascade="save-update" fetch="select" lazy="proxy"/>
        
        <property name="itemType" type="short" column="itemtype" not-null="true" />
        <property name="referenceCode" type="string" column="refcode" length="64" not-null="true" />
        <property name="itemSource" type="string" column="itemsource" length="8" not-null="true" />
        
        <property name="version" type="long" column="version" />  

    </class>

</hibernate-mapping>
