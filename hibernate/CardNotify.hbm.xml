<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.card.basic.BasicCardNotify"
		entity-name="com.fis.cortex.crdbase.domain.card.CardNotify" table="CRDNOTIFY" optimistic-lock="version">
		
		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${crdnotify_id.generator.sequence}</param>
			</generator>
		</id>
		<version name="versionNumber" column="VERNO_CTX" access="field" />

		<many-to-one name="card" class="com.fis.cortex.crdbase.domain.card.Card"
		 column="CRDDET_ID" access="field" />
		 
		<property name="mobileTelephone" column="MOBTEL" type="string" length="15" access="field"/>
		<property name="emailAddress" column="EMAIL" type="string" length="64" access="field"/>

	</class>
</hibernate-mapping>

