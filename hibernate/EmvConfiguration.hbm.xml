<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.domain.core.emv.conf.basic.BasicEmvConfiguration"
		entity-name="com.fis.cortex.domain.core.emv.conf.EmvConfiguration" table="emvconf"
		dynamic-update="true" optimistic-lock="version">

		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${emvconf_id.generator.sequence}</param>
			</generator>
		</id>
		
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />

		<property name="shortDescr" column="short_descr" type="string" not-null="true" length="20" />
		<property name="descr" column="descr" type="string" not-null="true" length="128" />
		<property name="emvoda" column="emvoda" type="short" not-null="true" length="5" />
		<property name="icckeydev" column="icckeydev" type="char" not-null="true" />
		<property name="atclimit" column="atclimit" type="long" not-null="true" length="10" />
		<property name="arqcfailact" column="arqcfailact" type="char" not-null="true" />
		<property name="arqcfailrsp" column="arqcfailrsp" type="string" not-null="true" length="2" />
		<property name="iccpinfmt" column="iccpinfmt" type="short" not-null="true" length="5" />
		<property name="scriptset" column="scriptset" type="short" not-null="true" length="5" />
		
	</class>

</hibernate-mapping>