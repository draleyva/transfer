<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.cardevent.basic.BasicCardEvent"
		entity-name="com.fis.cortex.crdbase.domain.cardevent.CardEvent" table="crdevent"
		dynamic-update="true" optimistic-lock="version">
		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${crdevent_id.generator.sequence}</param>
			</generator>
		</id>
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />

		<property name="cardId" column="crddet_id" type="long" not-null="true" access="field" />
		<property name="batch" column="batch" type="long" not-null="true" access="field" />

		<property name="eventType" column="evtype" type="int" not-null="true" access="field" />
		<property name="eventSource" column="evsrc" type="int" not-null="true" access="field" />

		<property name="eventDateTime"	column="evdatetime" 	type="timestamp" not-null="true" access="field" />
        <property name="cortexDate"	column="ctxdate" 	type="date" not-null="true" access="field" />

        <property name="reason" column="reason" type="string" length="64" not-null="true" access="field" />
        <property name="status" column="status" type="int" not-null="true" access="field" />
		
		<property name="eventNotes" column="evnotes" type="string" length="255" not-null="true" access="field" />
		<property name="feeControl" column="feectrl" type="int" not-null="true" access="field" />
		
	</class>

</hibernate-mapping>

