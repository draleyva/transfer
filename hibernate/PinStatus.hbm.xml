<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.pin.basic.BasicPinStatus"
		entity-name="com.fis.cortex.crdbase.domain.pin.PinStatus" table="pinstatus"
		dynamic-update="true" optimistic-lock="version">
		<id name="id" type="long">
		<column name="id" />
		<generator class="native">
			<param name="sequence_name">${pinstatus_id.generator.sequence}</param>
		</generator>
		</id>
			
		<version name="versionNumber" column="verno_ctx" generated="always"
			access="field" />
		
		<property name="systemDefinition" column="SYSDEF" type="char"
			length="1" not-null="true" access="field" />
		
		<property name="shortDescription" column="SHORT_DESCR" type="string" length="27"
			not-null="true" access="field" />
			
		<property name="description" column="DESCR" type="string" length="128"
			access="field" />
		
		<property name="allowSVC" column="ALLOWSVC" type="string" length="192"
			not-null="true" access="field" />
		
		<property name="actionCode" column="ACTIONCODE" type="string"
			length="2" not-null="true" access="field" />
		
		<property name="responseCode" column="RSPCODE" type="string"
			length="2" not-null="true" access="field" />
	</class>

</hibernate-mapping>
