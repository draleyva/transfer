<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fis.cortex.model.des.domain.comments.basic.BasicComments"
		entity-name="com.fis.cortex.model.des.domain.comments.Comments" table="comments"
		dynamic-update="true" optimistic-lock="version">
		<cache usage="nonstrict-read-write" />

		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${comments_id.generator.sequence}</param>
			</generator>
		</id>
		<version name="versionNumber" column="verno_ctx" generated="always" access="field" />		
		<property name="whenCreated" column="whencreated" type="timestamp" not-null="true" />
		<property name="byWhomId" column="bywhomid" type="string" not-null="true" length="50" />
		<property name="byWhomName" column="bywhomname" type="string" length="200" />
		<property name="commentText" column="commenttext" type="string" not-null="true" length="500" />
		<property name="externalId" column="externalid" type="string" length="64" />

	</class>

</hibernate-mapping>
