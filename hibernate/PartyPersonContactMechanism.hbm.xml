<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class
		name="com.fis.cortex.crdbase.domain.contactmechanism.basic.BasicPartyPersonContactMechanism"
		entity-name="com.fis.cortex.crdbase.domain.contactmechanism.PartyPersonContactMechanism"
		table="prt_pcm" optimistic-lock="version">

		<composite-id name="id">
			<key-property name="partyId" access="field" column="PRT_PARTY_ID"
				type="long" />
			<key-property name="partyPrtId" access="field" column="PRT_PRT_ID"
				type="int" />
			<key-property name="partyContactMechanismId" access="field"
				column="PRT_CM_ID" type="long" />
			<key-property name="partyContactMechanismTypeId" 
				access="field" type="int" column="PRT_CMT_ID" />
			<key-property name="fromDate" access="field" column="FROM_DATE"
				type="date" />
		</composite-id>

		<version name="versionNumber" column="VERNO_CTX" access="field" />

		<property name="untilDate" access="field" column="UNTIL_DATE"
			type="date" not-null="true" />
		<property name="nonSolicitationIndicator" access="field"
			column="NON_SOLICITATION_IND" type="char" not-null="true" />
		<property name="cortexComment" access="field" column="CTXCOMMENT"
			type="string" />

	</class>
</hibernate-mapping>

