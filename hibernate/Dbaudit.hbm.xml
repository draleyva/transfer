<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class name="com.fis.cortex.domain.core.dbaudit.basic.BasicDbaudit"
  		entity-name="com.fis.cortex.domain.core.dbaudit.Dbaudit" table="DBAUDIT" mutable="false" optimistic-lock="version">

    <id name="id" type="long" column="ID" access="field"/>

    <version name="versionNumber" column="VERNO_CTX" access="field"></version>

    <property name="tbl_name" column="TBL_NAME" type="string" not-null="true" access="field" />

    <property name="tbl_column" column="TBL_COLUMN" type="string" not-null="true" access="field" />

    <property name="key_value" column="KEY_VALUE" type="string" not-null="true" access="field" />

    <property name="op_date" column="OP_DATE" type="date" not-null="true" access="field" />

    <property name="op_time" column="OP_TIME" type="long" not-null="true" access="field" />

    <property name="cmd" column="CMD" type="char" not-null="true" access="field" />

    <property name="op_src" column="OP_SRC" type="char" not-null="true" access="field" />

    <property name="usr_name" column="USR_NAME" type="string" not-null="true" access="field" />

    <property name="old_value" column="OLD_VALUE" type="string" not-null="true" access="field" />

    <property name="new_value" column="NEW_VALUE" type="string" not-null="true" access="field" />

  </class>

</hibernate-mapping>
