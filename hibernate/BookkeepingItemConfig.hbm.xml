<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
    <class name="com.metavante.cortex.domain.ccs.bookkeeping.basic.BasicBookkeepingItemConfig" table="ccsbkitemcfg" 
    dynamic-update="true" dynamic-insert="true">

        <id name="id" type="long" column="id" />

        <property name="itemType" type="short" column="itemtype" not-null="true" />
        <property name="itemCategories" type="string" column="itemcat" not-null="true" />
								<property name="messageClass" type="char" column="msgcls" length="1" not-null="true" />
								<property name="transactionCode" type="short" column="txncode" not-null="true" />
								<property name="bookkeepingItemType" type="short" column="bktype" not-null="true" />
								<property name="debitOrCreditFlag" type="char" column="drcr"	length="1" not-null="true" />
        
    </class>

</hibernate-mapping>
