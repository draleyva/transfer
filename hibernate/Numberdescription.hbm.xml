<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.numberdescription.basic.BasicNumberDescription"
		entity-name="com.fis.cortex.crdbase.domain.numberdescription.NumberDescription" table="NUMDESCR" optimistic-lock="version">
		
		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${numdescr_id.generator.sequence}</param>
			</generator>
		</id>		
		<version name="versionNumber" column="VERNO_CTX" access="field" />

		<property name="language" column="LANG" type="string" length="2" access="field"/>
		<property name="descriptionType" column=" DESCRTYPE" type="string" length="6" access="field"/>		
		<property name="description" column="DESCR" type="string" length="160" access="field"/>
	</class>
</hibernate-mapping>

