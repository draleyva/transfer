<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class
		name="com.fis.cortex.domain.core.langtranslation.basic.BasicLangTranslation"
		entity-name="com.fis.cortex.domain.core.langtranslation.LangTranslation"
		table="DESCR" optimistic-lock="version">

		<composite-id>
			<key-property name="tag" column="DESCRTAG" type="long"
				access="field" />
			<key-property name="lang" column="LANG" type="string"
				length="4" access="field" />
		</composite-id>

		<version name="versionNumber" column="VERNO_CTX" access="field"></version>

		<property name="description" column="DESCR" type="string"
			length="40" not-null="true" access="field" />

	</class>

	<query name="LangTranslations.findAll"><![CDATA[from LangTranslations]]></query>

</hibernate-mapping>
