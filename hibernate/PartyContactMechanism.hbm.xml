<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class
		name="com.fis.cortex.crdbase.domain.contactmechanism.basic.BasicPartyContactMechanism"
		entity-name="com.fis.cortex.crdbase.domain.contactmechanism.PartyContactMechanism"
		table="prt_cm" optimistic-lock="version">
		
		<composite-id name="id" class="com.fis.cortex.crdbase.domain.contactmechanism.PartyContactMechanismId">
		    <key-property name="contactMechanismId"  column="ID" type="long" />
			<key-property name="partyContactMechanismType" column="prt_cmt_id"
					type="int" access="field"/>
		</composite-id>
		<version name="versionNumber" column="VERNO_CTX" access="field" />
	</class>
</hibernate-mapping>

