<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.fis.cortex.model.des.domain.token.basic.BasicTokenDevice" entity-name="com.fis.cortex.model.des.domain.token.TokenDevice"
		table="TKNDEVICE">
		<cache usage="read-only" />
		
		<id name="id" type="long" column="id" />
		<many-to-one name="token" class="com.fis.cortex.model.des.domain.token.Token" cascade="none" access="field" column="token_id" fetch="join" />

		<property name="whenCreated" type="timestamp" column="whencreated" not-null="true" />
		<property name="boundDeviceIndex" type="long" column="bnddevidx" not-null="true" />
		<property name="deviceId" type="string" column="devid" length="48" not-null="true" />
		<property name="deviceStatus" type="char" column="devstatus" not-null="true" />
		<property name="deviceType" type="int" column="devtype" />
		<property name="mobileNumberSuffix" type="string" column="mobilenosuffix" length="15" />
		<property name="deviceName" type="string" column="devname" length="20" />
		<property name="deviceLocation" type="string" column="devlocation" length="25" />
		<property name="deviceImei" type="string" column="devimei" length="24" />
		<property name="deviceOsId" type="string" column="devosid" length="24" />
		<property name="deviceCountryCode" type="string" column="devctry" length="3" />
		<property name="deviceProtectionMethodType" type="char" column="devprotmethod" />
		<property name="devicePresentationType" type="char" column="devpresenttype" />
		<property name="deviceSerialNumber" type="string" column="devserialno" length="32" />
		<property name="deviceLocationSource" type="char" column="devlocationsrc" />
		<property name="deviceTimeZone" type="string" column="devtimezone" length="5" />
		<property name="deviceTimeZoneSetting" type="char" column="devtimezoneset" />
		<property name="deviceBluetoothMac" type="string" column="devblumac" length="24" />
		<property name="deviceOsType" type="char" column="devostype" />
		<property name="deviceIp" type="string" column="devipaddress" length="15" />
		<property name="tokenUserId" type="string" column="tknusrid" length="11" />
		<property name="tokenUserAppType" type="int" column="tknusrapptype" />
		<property name="authReqCorrelationId" type="string" column="authReqCorrelationId" length="64" />
		

	</class>
</hibernate-mapping>
