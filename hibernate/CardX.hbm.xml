<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.card.basic.BasicCardX"
		entity-name="com.fis.cortex.crdbase.domain.card.CardX" table="CRDDET_X" optimistic-lock="version">
		
		<id name="id" type="long">
			<column name="id" />
			<generator class="native">
				<param name="sequence_name">${crddet_x_id.generator.sequence}</param>
			</generator>
		</id>		
		<version name="versionNumber" column="VERNO_CTX" access="field" />
		<property name="networkChangeIndicator" column="NETCHGEXP" type="int" length="5" />
		<property name="networkChangePurgeIndicator" column="NETCHGKILL" type="int" length="5" />
		<property name="networkChangeDate" column="NETCHGKDATE" type="date"  />
		<property name="cycleBeginControl" column="CYCBEGIN_CNTRL" type="int" length="5" />
		<property name="cardPlasticTypeId" column="CRDPLSTCTYP_ID" type="int" length="10" />
		
		<property name="dateLastIssued" column="DATELSTISSUED" type="date" />
		
		<property name="designReference" column="DESIGN_REF" type="string" length="12" access="field"/>     
		
		<many-to-one name="feeCategory" column ="CAT_ISSFEE_ID" class="com.fis.cortex.crdbase.domain.fee.FeeCategory"
			cascade="none" access="field" not-found="ignore" not-null="true">			
		</many-to-one>
		
		<many-to-one name="cyclicFeeCategory" column ="CAT_ISSCYCFEE_ID" class="com.fis.cortex.crdbase.domain.charge.CyclicFeeCategory"
			cascade="none" access="field" not-found="ignore" not-null="true">			
		</many-to-one>
		
		<many-to-one name="card" class="com.fis.cortex.crdbase.domain.card.Card"
		 column="CRDDET_ID" access="field" />
		
		<property name="CycFeeChangeDate" column="DATE_CYCFEE_MOVED" type="date" />
		<property name="userData1" column="USRDATA1" type="string" length="32" access="field"/>
		<property name="userData2" column="USRDATA2" type="string" length="32" access="field"/>		
		<property name="userData3" column="USRDATA3" type="string" length="32" access="field"/>
		<property name="userData4" column="USRDATA4" type="string" length="32" access="field"/>
		<property name="userData5" column="USRDATA5" type="string" length="32" />
		
		<many-to-one name="categoryCardIssuance" column ="cat_crdiss_id" class="com.fis.cortex.crdbase.domain.categorycardissuance.CategoryCardIssuance"
			cascade="none" access="field" not-found="ignore" not-null="true">			
		</many-to-one>
		 
	</class>
</hibernate-mapping>