<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="com.metavante.cortex.domain.ccs.paymentplan.basic.BasicPaymentPlanSetNumberOfInstalment" table="ccsppsetnuminst"  optimistic-lock="version"
		entity-name="com.metavante.cortex.domain.ccs.paymentplan.PaymentPlanSetNumberOfInstalment"
		dynamic-update="true" dynamic-insert="true">
         <id name="id" type="long">
           <column name="id" />
            <generator class="native">
              <param name="sequence_name">${ccsppsetnuminst_id.generator.sequence}</param>
            </generator>
          </id>    

 		<version name="versionNumber" column="verno_ctx" generated="always" access="field" type="long" unsaved-value="undefined" /> 

        <property name="paymentPlanSetId" type="long" column="ppsetid" />
        <property name="numberOfInstalmentsId" type="int" column="numinstid"/>
		<property name="numberOfInstalments" column="numinst" type="int"/>

	</class>
</hibernate-mapping>