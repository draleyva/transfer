<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fis.cortex.domain.custid.basic.BasicCustIdType"
		entity-name="com.fis.cortex.domain.custid.CustIdType" table="custidtype"
		dynamic-update="true" optimistic-lock="version">

		<id name="id" type="long">
			<column name="ID" />
			<generator class="native">
				<param name="sequence">custidtype_sequence</param>
			</generator>
		</id>
		<version name="versionNumber" column="verno_ctx" generated="always"
			access="field" />
		<many-to-one name="institution" class="com.nomadsoft.cortex.domain.institution.Institution"
    		column="inst_id"  cascade="none"/>		
		<property name="code" type="string"  column="IDTYPECODE" length="16" access="field"/>
		<property name="description" type="string" column="IDTYPEDESCR" length="32" access="field"/>			
	</class>
</hibernate-mapping>