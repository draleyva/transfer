<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.card.basic.BasicCardPin"
		entity-name="com.fis.cortex.crdbase.domain.card.CardPin" table="crdpin"
		dynamic-update="true" optimistic-lock="version">
		
	<composite-id class="com.fis.cortex.crdbase.domain.card.CardPinId" name="cardPinId">
			<key-property name="cardId" access="field" column="crddet_id" type="long" />
			<key-property name="cardPinType" access="field" column="pintype" type="short" />	
	</composite-id>
			
		<version name="versionNumber" column="verno_ctx" generated="always"
			access="field" />
		<property name="pintries" column="pintries" type="int"
			length="5" not-null="true" access="field" />
		<property name="pinblk" column="pinblk" type="string" length="64"
			not-null="true" access="field" />
		<property name="pincount" column="pincount" type="int"
			length="10" not-null="true" access="field" />
		<property name="org_rrn" column="org_rrn" type="string"
			length="12" not-null="true" access="field" />
		<property name="org_pincount" column="org_pincount" type="int"
			length="10" not-null="true" access="field" />
		<property name="org_pinblk" column="org_pinblk" type="string"
			length="64" not-null="true" access="field" />
		<property name="dateCreated" column="datecreated" type="date"
			length="32" not-null="true" access="field" />
		<property name="dateChanged" column="datechanged" type="date"
			length="32" not-null="true" access="field" />
		<property name="lastPinTransactionDate" column="datelstpin" type="date"
			length="32" not-null="true" access="field" />
		<property name="consecutivePinTries" column="pintries_consec" type="int"
			length="5" not-null="true" access="field" />
		<property name="pinLength" column="pin_len" type="short"
				  length="5" not-null="true" access="field" />
		<property name="offsetPvkSeqno" column="offset_pvk_seqno" type="short"
				  length="5" not-null="true" access="field" />
		<property name="orgOffsetPvkSeqno" column="ORG_OFFSET_PVK_SEQNO" type="short"
				  length="5" not-null="true" access="field" />
		<property name="decTabSeqno" column="DEC_TAB_SEQNO" type="short"
				  length="5" not-null="true" access="field" />
		<property name="orgDecTabSeqno" column="ORG_DEC_TAB_SEQNO" type="short"
				  length="5" not-null="true" access="field" />				  
		<property name="ibmOffset" column="IBM_OFFSET" type="string"
				  length="12" not-null="true" access="field" />
		<property name="orgIbmOffset" column="ORG_IBM_OFFSET" type="string"
				  length="12" not-null="true" access="field" />				  
	</class>

</hibernate-mapping>
