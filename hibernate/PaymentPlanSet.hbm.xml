<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">
<!-- NOTE LAZY LOADING POLICY IS NOT BEING ENFORCED IN THIS CLASS AS IT BREAKS PAYMENT PLAN SET SCREEN. THERE IS WITH XSTREAM AND
	 PROXY OBJECTS WHICH HAS NOT BEEN RESOLVED. IF LAZY LOADING IS ENABLED PLEASE VALIDATE THE GUI IS ALSO FIXED -->
<hibernate-mapping>
	<class name="com.metavante.cortex.domain.ccs.paymentplan.basic.BasicPaymentPlanSet" 
	entity-name="com.metavante.cortex.domain.ccs.paymentplan.PaymentPlanSet" table="ccsppset" optimistic-lock="version"
		dynamic-update="true" dynamic-insert="true">
         <id name="id" type="long">
           <column name="ppsetid" />
            <generator class="native">
              <param name="sequence_name">${ccsppset_id.generator.sequence}</param>
            </generator>
          </id>    

 		<version name="versionNumber" column="verno_ctx" generated="always" access="field" type="long" unsaved-value="undefined" /> 
		<many-to-one name="institution" class="com.fis.cortex.domain.core.institution.Institution" column="inst_id" lazy="false" access="field"/>      
		<property name="name" column="ppsetname" type="string"/>
		<property name="description" column="description"  type="string" />
        <property name="status" column="status"  type="int" />
	    <property name="rateBasis" column="rate_basis" type="char"/>
        <property name="instalmentChargeCalcMethod" column="instchrgcalcmthd" type="short"/>

        <component name="lowestTransactionAmountInPlan" class="com.metavante.cortex.domain.money.Money">
            <property name="amount" column="lowthresamt" access="field"/>
            <many-to-one name="currency" class="com.metavante.cortex.domain.money.Currency"
                        lazy="false" cascade="none" access="field">
                <column name="currcode"/>
            </many-to-one>
        </component>
        
	</class>
</hibernate-mapping>