<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="com.fis.cortex.crdbase.domain.card.basic.BasicCardAccount"
		entity-name="com.fis.cortex.crdbase.domain.card.CardAccount" table="CRDACC"
		optimistic-lock="version">
		<composite-id name="id"
			class="com.fis.cortex.crdbase.domain.card.CardAccountId">
			<key-many-to-one name="card" class="com.fis.cortex.crdbase.domain.card.Card" column="crddet_id"
				access="field" lazy="false" />
			<key-many-to-one name="account"
				class="com.fis.cortex.crdbase.domain.account.Account" column="accdet_id"
				access="field" lazy="false" />
		</composite-id>

		<version name="versionNumber" column="VERNO_CTX" access="field"></version>

		<property name="isoCode" column="ISOCODE" access="field"  type="int" length="5" />
			
		<property name="typeCode" column="TYPECODE" type="string"
			access="field" length="2" />
		<property name="roleId" column="ROLEID" type="string" access="field"
			length="4" />
	    <property name="priority" column="PRIORITY" type="int" access="field"
			length="2" />
		
	</class>
</hibernate-mapping>
