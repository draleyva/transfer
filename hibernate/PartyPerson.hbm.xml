<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

	<class name="com.fis.cortex.crdbase.domain.contactmechanism.basic.BasicPartyPerson"
		entity-name="com.fis.cortex.crdbase.domain.contactmechanism.PartyPerson" table="prt_person" optimistic-lock="version">
		
		<id name="id" type="long">
			<column name="prt_party_id" />
		</id>		
		<version name="versionNumber" column="VERNO_CTX" access="field" />

		<property name="customerId" column="custdet_id" type="long" access="field"/>
	</class>
</hibernate-mapping>

