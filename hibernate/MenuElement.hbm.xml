<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fis.cortex.domain.core.access.basic.BasicMenuElement" 
		entity-name="com.fis.cortex.domain.core.access.MenuElement" table="menuelement" >
		<composite-id class="com.fis.cortex.domain.core.access.basic.MenuElementId" name="id">
			<key-property name="acsitem" access="field" column="acsitem"
				type="string" />
			<key-property name="usrgrp" column="usrgrp" type="string"
				access="field" />
			<key-property name="title_lang" column="title_lang"
				type="string" access="field" />
		</composite-id>

		<property name="usrgrp" column="usrgrp" insert="false" update="false" />
		<property name="title_lang" column="title_lang" insert="false" update="false" />
		<property name="acsitem" column="acsitem" insert="false" update="false" />
		<property name="mitem" column="mitem" />
		<property name="morder" column="morder" insert="false" update="false" />
		<property name="acstype" column="acstype" />
		<property name="title" column="title" />
		<property name="src_code" column="src_code" />

		<bag name="subMenu" batch-size="10" fetch="join" cascade="evict" order-by="morder">
			<key>
				<column name="mitem" />
				<column name="usrgrp" />
				<column name="title_lang" />
			</key>
			<one-to-many entity-name="com.fis.cortex.domain.core.access.MenuElement" />
		</bag>

		<many-to-one name="screen" column="acsitem" unique="true"
			insert="false" update="false" not-null="false" fetch="join" cascade="evict" />
	</class>
</hibernate-mapping>