<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.fis.cortex.party.domain.contactmechanism.basic.BasicContactMechanism"
		entity-name="com.fis.cortex.party.domain.contactmechanism.ContactMechanism" table="PRT_CM" optimistic-lock="version">
		
		<composite-id name="id" class="com.fis.cortex.party.domain.contactmechanism.basic.ContactMechanismId">
		    <key-property name="contactMechanismId"  column="ID" type="long" />
			<key-many-to-one name="contactMechanismType" column="PRT_CMT_ID" class="com.fis.cortex.party.domain.contactmechanism.ContactMechanismType"/>

		</composite-id>
	
		<version name="versionNumber" column="VERNO_CTX" access="field"/>
		
        <many-to-one name="postalAddress" not-found="ignore" class="com.fis.cortex.party.domain.contact.PostalAddress" insert="false" update="false">
            <column name="ID" />
            <column name="PRT_CMT_ID"/>
        </many-to-one>
        
        <many-to-one name="telecommunicationNumber" not-found="ignore" class="com.fis.cortex.party.domain.contact.TelecommunicationNumber" insert="false" update="false">
            <column name="ID" />
            <column name="PRT_CMT_ID"/>
        </many-to-one>
        
        <many-to-one name="electronicAddress" not-found="ignore" class="com.fis.cortex.party.domain.contact.ElectronicAddress" insert="false" update="false">
            <column name="ID" />
            <column name="PRT_CMT_ID"/>
        </many-to-one>



	</class>
</hibernate-mapping>
