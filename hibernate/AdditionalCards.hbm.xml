<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>

  <class name="com.fis.cortex.crdbase.domain.card.basic.BasicAdditionalCards"
    entity-name="com.fis.cortex.crdbase.domain.card.AdditionalCards" table="ADDITIONALS" optimistic-lock="version">
    <id name="id" type="long" column="ADD_CRDDET_ID" length="10"  access="field" >
        	<generator class="assigned"/>
    </id>
    <version name="versionNumber" column="VERNO_CTX" access="field"></version>
     <property name="additonalNo" type="long">
      <column name="ADDITIONALNO" length="10" not-null="true" />
    </property>
    <many-to-one name="card" class="com.fis.cortex.crdbase.domain.card.Card" column="CRDDET_ID" access="field"/>
  </class>

</hibernate-mapping>

